@model Category
@{
    ViewData["Title"] = "Create";
}
<!-- Page-header start -->
<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>Categories</h4>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item" style="float: left;">
                        <a asp-controller="Dashboard" asp-action="Index"> <i class="feather icon-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;"><a asp-action="Index">Categories</a> </li>
                    <li class="breadcrumb-item" style="float: left;"><a href="#!">Yeni kategoriya yaratmaq</a> </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Page-header end -->

<div class="page-body">
    <div class="row">
        <div class="col-sm-12">

            <div class="card">
                <div class="card-block">
                    <h4 class="sub-title">Yeni kategoriya yarat</h4>
                    <form method="Post">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label required" asp-for="Name">
                            </label>
                            <div class="col-sm-10">
                                <input class="form-control" placeholder="Kateqoriya adını daxil edin" asp-for="Name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label required" asp-for="ParentId">
                            </label>
                            <div class="col-sm-10">
                                <select class="form-control select2" asp-for="ParentId" asp-items="@ViewBag.Categories">
                                    <option value="" selected>-- Seçilməyib --</option>
                                </select>
                                <span asp-validation-for="ParentId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label" asp-for="Description">
                            </label>
                            <div class="col-sm-10">
                                <textarea class="form-control" placeholder="Kateqoriya üçün qısa qeyd daxil edin" asp-for="Description"></textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-12">
                                <a class="btn btn-info btn-square" asp-action="Index">
                                    Siyahıya qayıt
                                </a>
                                <button class="btn btn-success btn-square" type="submit">
                                    Təsdiq et
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section addcss{
    <link href="~/libs/select2/css/select2.css" rel="stylesheet" />
}
@section addjs{
    <script src="~/libs/select2/js/select2.full.js"></script>

<script>
    $(document).ready(function()
        {
        $('.select2').select2();
    });
</script>
}

