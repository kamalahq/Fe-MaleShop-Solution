@model LoginFormModel
@{
    ViewData["Title"] = "Signin";
}

<section class="inner_page_head">
    <div class="container_fuild">
        <div class="row">
            <div class="col-md-12">
                <div class="full">
                    <h3>Register</h3>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="why_section layout_padding">
    <div class="container">

        <div class="row" 
    >
            <div class="col-lg-8 offset-lg-2">
                <div class="full">
                    <form method="post"> 
                        @if (!string.IsNullOrWhiteSpace(ViewBag.Message))
                              {
                            <div class="alert alert-warning text-white">@ViewBag.Message</div>
                            }
                        <fieldset>
                            <input class="form-control"  asp-for="UserName" placeholder="İstifadəçi adınızı və ya e-mailinizi daxil edin"style="padding: 2.375rem 0.75rem;"/>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                            <input class="form-control"  asp-for="Password" placeholder="Parol qeyd edin *" style="padding: 2.375rem 0.75rem; required  />
                            <span asp-validation-for="Password" class="text-danger"></span>
                            
                            <input type="submit" value="Göndər" />
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

