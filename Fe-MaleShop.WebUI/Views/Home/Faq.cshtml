
@model IEnumerable<Faq>
@{     
    ViewData["Title"] = "Faqs";
}

<

  <div class="page-content m-b-10 pb-8">
        <section>
            <div class="container">
                <div class="row">
                    <div class="col-12 mt-10">
                        <div class="accordion accordion-border accordion-boxed accordion-plus">
                            @foreach (var item in Model)
                            {
                                <div class="card">
                                    <div class="card-header">
                                        <a href="#collapse@(item.Id)" class="collapsed">
                                            @item.Question
                                        </a>
                                    </div>
                                    <div id="collapse@(item.Id)" class="expanded">
                                        <div class="card-body">
                                            <p>
                                                @item.Anwser
                                            </p>
                                        </div>
                                    </div>
                                </div>

    }

</div>
                </div>

            </div>
        </div>
    </section>
</div>

